{
  "name": "media-query-parser",
  "version": "0.0.0-development",
  "description": "Parse CSS media queries and merge",
  "main": "dist/index.js",
  "module": "dist/media-query-parser.esm.js",
  "umd": "dist/media-query-parser.umd.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "coverage"
  ],
  "author": {
    "name": "Tom Golden",
    "email": "github@tbjgolden.com",
    "url": "https://github.com/tbjgolden"
  },
  "homepage": "https://github.com/tbjgolden/media-query-parser",
  "repository": {
    "type": "git",
    "url": "https://github.com/tbjgolden/media-query-parser.git"
  },
  "scripts": {
    "build": "yarn run clean && tsc -p tsconfig.build.json && rollup -c ./config/rollup.config.js && del compiled",
    "clean": "concurrently \"del compiled\" \"del coverage\" \"del dist\"",
    "coverage": "jest --config ./config/jest/config.src.ts",
    "ctrl": "ctrl",
    "lint": "eslint . --ext .ts,.tsx",
    "start": "stmux -c line -w error -e ERROR -m beep,system -M -- [ \"yarn watch\" ]",
    "test": "concurrently \"yarn:lint\" \"yarn:build\" && concurrently \"jest --config ./config/jest/config.cjs.ts\" \"jest --config ./config/jest/config.es.ts\" \"jest --config ./config/jest/config.src.ts\" \"jest --config ./config/jest/config.umd.ts\"",
    "watch": "jest --config ./config/jest/config.src.ts --coverage=false --watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "keywords": [
    "typescript"
  ],
  "license": "MIT",
  "bugs": {
    "url": "github:tbjgolden/media-query-parser/issues"
  },
  "peerDependencies": {},
  "dependencies": {
    "@babel/runtime": "^7.12.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@babel/plugin-transform-runtime": "7.12.10",
    "@babel/preset-env": "7.12.11",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@types/dedent": "^0.7.0",
    "@types/jest": "26.0.20",
    "@types/mkdirp": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "4.14.0",
    "@typescript-eslint/parser": "4.14.0",
    "babel-core": "6.26.3",
    "babel-loader": "^8.2.2",
    "classnames": "^2.2.6",
    "commitizen": "^4.2.3",
    "concurrently": "^5.3.0",
    "cp-cli": "2.0.0",
    "cross-env": "7.0.3",
    "ctrl-scripts": "^0.1.0",
    "dedent": "^0.7.0",
    "del-cli": "3.0.1",
    "enquirer": "^2.3.6",
    "eslint": "7.18.0",
    "eslint-config-prettier": "7.2.0",
    "fast-glob": "^3.2.5",
    "fork-ts-checker-webpack-plugin": "^6.1.0",
    "fs-extra": "^9.1.0",
    "husky": "^4.3.8",
    "jest": "26.6.3",
    "mkdirp": "^1.0.4",
    "prettier": "2.2.1",
    "pretty-quick": "^3.1.0",
    "regenerator-runtime": "0.13.7",
    "rollup": "2.38.0",
    "rollup-plugin-filesize": "9.1.0",
    "rollup-plugin-terser": "7.0.2",
    "run-parallel": "^1.1.10",
    "semantic-release": "^17.3.7",
    "stmux": "^1.8.1",
    "ts-jest": "26.4.4",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.19",
    "typedoc-plugin-markdown": "^3.4.3",
    "typescript": "4.1.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "quoteProps": "consistent",
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "always",
    "htmlWhitespaceSensitivity": "strict"
  },
  "eslintConfig": {
    "root": true,
    "extends": "./config/eslint.config.js"
  }
}
