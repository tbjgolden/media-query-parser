{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [],
    "module": "NodeNext",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "dist"
  },
  "include": [
    ".eslintrc.cjs",
    ".scripts/jestResolver.cjs",
    "typings.d.ts",
    "cli/**/*",
    "lib/**/*",
    ".scripts/**/*"
  ]
}
